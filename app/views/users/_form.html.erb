<%= render 'shared/errors', obj: @user %>
<div class="px-4 my-5">
  <%= form_with(model: @user, local: true, data: { turbo: false })  do |f| %>
    <div class="form-group row">
      <%= f.label :username, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :username, class: "form-control", placeholder: 'Username' %>
    </div>

    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: 'Enter your email address' %>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-10">
      <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
    </div>
    <br>
    <div>
      <%= f.submit(@user.new_record? ? "Iscrivite" : "Aggiorna", class:"btn btn-primary btn-lg px-4 gap-3") %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= link_to '[ Cancel and return to Homepage ]', root_path %>
  </div>
</div>