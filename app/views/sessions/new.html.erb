<h1 class="text-center mt-4">Sign In</h1>

<div class="px-4 my-5">
  <%= form_with(scope: :session, url: signin_path, data: { turbo: false })  do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: 'Enter your email address' %>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-10">
      <%= f.password_field :password, class: "form-control", placeholder: 'Enter your Password' %>
    </div>
    <br>
    <div>
      <%= f.submit "Sign In", class:"btn btn-primary btn-lg px-4 gap-3" %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= link_to '[ Cancel and return to Homepage ]', root_path %>
  </div>
</div>