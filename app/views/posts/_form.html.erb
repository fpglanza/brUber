<%= render 'shared/errors', obj: @post %>
<div class="px-4 my-5">
  <%= form_with(model: @post, local: true)  do |f| %>
    <div class="form-group row">
      <%= f.label :title, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-lable" %>
    </div>
    <div class="col-10">
      <%= f.text_area :description, rows: 10,  class: "form-control" %>
    </div>
    <br>
    <div>
      <%= f.submit class:"btn btn-primary btn-lg px-4 gap-3" %>
    </div>
  <% end %>
</div>
