<h1>Create new Post</h1>
<% if @post.errors.any? %>
  <h2>Errors:</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :post, url: posts_path, local: true do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :description %></p>
  <p><%= f.text_area :description %></p>
  <%= f.submit %>
<% end %>